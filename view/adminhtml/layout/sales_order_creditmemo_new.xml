<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="sales_creditmemo_create">
                <referenceBlock name="form">
                    <referenceBlock name="order_items"
                                    template="Unexpected_DeliveryTime::order/creditmemo/create/items.phtml">
                        <arguments>
                            <argument name="viewModel" xsi:type="object">
                                Magento\Sales\ViewModel\CreditMemo\Create\UpdateTotalsButton
                            </argument>
                            <argument name="delivery_time" xsi:type="object">
                                Unexpected\DeliveryTime\ViewModel\DeliveryTime
                            </argument>
                        </arguments>
                        <referenceBlock name="order_items.default"
                                        template="Unexpected_DeliveryTime::order/creditmemo/create/items/renderer/default.phtml">
                            <arguments>
                                <argument name="delivery_time" xsi:type="object">
                                    Unexpected\DeliveryTime\ViewModel\DeliveryTime
                                </argument>
                            </arguments>
                        </referenceBlock>
                    </referenceBlock>
                </referenceBlock>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
