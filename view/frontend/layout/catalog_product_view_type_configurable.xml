<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.options.wrapper">
            <block name="delivery.time" after="product.info.options.configurable" class="Magento\Catalog\Block\Product\View"
                   template="Greenrivers_DeliveryTime::catalog/product/view/delivery_time.phtml">
                <arguments>
                    <argument name="delivery_time" xsi:type="object">
                        Greenrivers\DeliveryTime\ViewModel\DeliveryTime
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
