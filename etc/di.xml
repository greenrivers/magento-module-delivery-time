    </type>
    <type name="Unexpected\DeliveryTime\Plugin\Model\DefaultCreditmemo">
        <arguments>
            <argument name="logger" xsi:type="object">Unexpected\DeliveryTime\Logger</argument>
        </arguments>
    </type>
    <type name="Unexpected\DeliveryTime\Plugin\Block\DefaultRenderer">
        <arguments>
            <argument name="logger" xsi:type="object">Unexpected\DeliveryTime\Logger</argument>
        </arguments>
    </type>
    <type name="Unexpected\DeliveryTime\Plugin\Block\Items">
        <arguments>
            <argument name="logger" xsi:type="object">Unexpected\DeliveryTime\Logger</argument>
        </arguments>
    </type>
    <type name="Unexpected\DeliveryTime\Observer\SaveProduct">
        <arguments>
            <argument name="logger" xsi:type="object">Unexpected\DeliveryTime\Logger</argument>
        </arguments>
    </type>
    <type name="Unexpected\DeliveryTime\Ui\DataProvider\Product\Form\Modifier\AddFields">
        <arguments>
            <argument name="logger" xsi:type="object">Unexpected\DeliveryTime\Logger</argument>
        </arguments>
    </type>
    <type name="Unexpected\DeliveryTime\Plugin\Block\Toolbar">
        <arguments>
            <argument name="logger" xsi:type="object">Unexpected\DeliveryTime\Logger</argument>
        </arguments>
    </type>

    <type name="Magento\Checkout\Block\Cart\AbstractCart">
        <plugin name="Unexpected_DeliveryTime::Block_AbstractCart"
                type="Unexpected\DeliveryTime\Plugin\Block\AbstractCart"/>
    </type>
    <type name="Magento\Checkout\Model\DefaultConfigProvider">
        <plugin name="Unexpected_DeliveryTime::Model_DefaultConfigProvider"
                type="Unexpected\DeliveryTime\Plugin\Model\DefaultConfigProvider"/>
    </type>
    <type name="Magento\Sales\Model\Order\Pdf\Items\Invoice\DefaultInvoice">
