<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="unexpected_delivery_time_order_item" resource="default" engine="innodb"
           comment="Unexpected_DeliveryTime order table">
        <column xsi:type="int" name="delivery_time_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Delivery Time ID"/>
        <column xsi:type="int" name="order_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Order ID"/>
        <column xsi:type="varchar" name="date_unit" nullable="false" length="64" comment="Date Unit"/>
        <column xsi:type="smallint" name="type" padding="2" unsigned="true" nullable="false" identity="false"
                comment="Type"/>
        <column xsi:type="int" name="min_scale" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Min Scale"/>
        <column xsi:type="int" name="max_scale" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Max Scale"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="delivery_time_id"/>
        </constraint>
        <constraint xsi:type="foreign"
                    referenceId="UNEXPECTED_DELIVERY_TIME_ORDER_ORDER_ID_SALES_ORDER_ENTITY_ID"
                    table="unexpected_delivery_time_order" column="order_id" referenceTable="sales_order"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="UNEXPECTED_DELIVERY_TIME_ORDER_ORDER_ID" indexType="btree">
            <column name="order_id"/>
        </index>
    </table>
</schema>
